<h1> Adopt an Animal!</h1>
<form action="new" method="post">

<label>
Choose an animal:
<select name="animal_id">
<% for animal in @animals %>
<option value="<%= animal.id%>">
<%= animal.name %></option>
<%end%>
</select>
</label>


<label>
Choose an owner:
<select name="owner_id">
<% for owner in @owners%>
<option value="<%= owner.id%>">
<%= owner.name %></option>
<%end%>
</select>
</label>
<label>
Date of Adoption:
</label>
<input type='text' name="date_of_adoption"></input>

<input type='submit' value="Create Adoption"/>
</form>

