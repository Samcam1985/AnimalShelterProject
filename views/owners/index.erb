<h1>Owners</h1>
<div>
<p class = "btn--wrapper">
<a class="btn btn--action" href="owners/new"> Add a New Owner</a>
</p>
</div>

<div style="border:1px solid #CCCCCC;padding:15px;">
  <% for owner in @owners %>
    <div>
     <span style="font-size:15pt; font-weight:bold; color:#006666;">Owner Name</span>
     <p><%= owner.name%></p> 
     <form action="/owners/<%=owner.id %>/delete" method="POST">
     <input class="btn btn--delete" type="submit" value="Delete" />
     </form>
     </div>
     <%end%>
     </div>